@model DataAccess.Entities.Employee
@{
    ViewData["Title"] = "Изменение сотрудника";
}


<section id="employee-edit">
    <div class="text-center">
        <strong>
            Изменение сотрудника
            <u>@Model.FirstName @Model.LastName</u>
        </strong>
    </div>
    <form asp-action="edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label"></label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="control-label"></label>
            <select asp-for="Gender" class="form-control">
                <option value="Мужской">Мужской</option>
                <option value="Женский">Женский</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartmentId" class="control-label"></label>
            <select asp-for="DepartmentId" class="form-control">
                @foreach (var dep in ViewBag.EmployeesDepartents)
                {
                    <option value="@dep.Id">@dep.Name</option>
                }
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ProgrammingLanguageId" class="control-label"></label>
            <select asp-for="ProgrammingLanguageId" class="form-control">
                @foreach (var lang in ViewBag.EmployeesProgLanguags)
                {
                    <option value="@lang.Id">@lang.Name</option>
                }
            </select>
            <span asp-validation-for="ProgrammingLanguageId" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-between">
            <a href="/" class="btn btn-primary">Вернуться к списку сотрудников</a>
            <input class="btn btn-success" type="submit" value="Изменить" />
        </div>
    </form>
</section>